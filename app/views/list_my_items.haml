%link(rel="stylesheet" type="text/css" href="/style.css")
%h1 Welcome #{user_name}
%h4 Your Money: #{money} $
%a{:href => "/"} Home
%br/
%a{:href => "/show_my_items"} My Items
%li
  %a{:href => "/create_item_site"} Create new Item
%a{:href => "/logout"} Logout
%h2 My Items
%ul
  - for item in items_of_user
    %li #{item.name}
    %ul Price = #{item.price} $
    %ul active = #{item.active}
    %table
      %tr
        %td
          %form(action = "/activate/#{item.id}" method = "POST")
            %input(type="submit" value="Activate")
        %td
          %form(action = "/deactivate/#{item.id}" method = "POST")
            %input(type="submit" value="Deactivate")
        %td
          %form(action = "/delete_item/#{item.id}" method = "POST")
            %input(type="submit" value="Delete")

    %p
%hr
Time: #{time.strftime("%H:%M:%S")}

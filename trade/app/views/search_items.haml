:javascript
  $(document).ready(function() {
     $('.powertip').powerTip({
          placement: 's' // north-east tooltip positio
     });
  })
%h2
  Items
%h3
  The following items match your input
%table.table-minimalistic{:id => "Table", :class => "tablesorter pager", :align => "center"}
  %thead
    %tr
      %th Pic
      %th Name
      %th Price
      %th Qty
      %th Owner
      %th Active
  %tbody
    -for item in matched_items
      %tr
        %td
          %img{:src => item.image_path, :height => "40px"}
        %td
          %a.powertip{:href => url("/item/#{item.id}"), "data-powertip" => RDiscount.new(item.description, :smart, :filter_html).to_html}
            :escaped
              #{item.name}
        %td.ralign
          #{item.price}
        %td.ralign
          #{item.quantity}
        %td
          %a{:href => url("#{item.owner.class == Store::User ? "/user/" : "/organization/"}#{item.owner.name}")}
            :escaped
              #{item.owner.name}
        %td
          -if item.active?
            %input{:type => "checkbox", :disabled => "disabled", :checked => "checked"}
          -else
            %input{:type => "checkbox", :disabled => "disabled"}
=haml :'partials/pagination'
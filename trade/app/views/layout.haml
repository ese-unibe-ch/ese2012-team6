!!! XML
!!! 5
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %link{:rel => "stylesheet", :href => url("styles.css"), :type => "text/css"}
    %title
      Awesome Trading App
  %body
    #outer
      #inner
        #status_container
          #nav_menu
            -if @user != nil
              %ul
                %li
                  %a{:href => url("/")} Store
                %li
                  %a{:href => url("/users")} Users
                %li
                  %a{:href => url("/items")} Items
          #credit_status
            -if @user != nil
              %span
                Credits: $#{@user.credits}
          #login_status
            %span
              -if @user != nil
                Logged in as
                %a{:href => url("/profile/#{@user.name}")}
                  #{@user.name}
                |
                %a{:href => url("/logout")} Logout
              -else
                Not logged in!
                |
                %a{:href => url("/register")}
                  Register
        #content
          =yield
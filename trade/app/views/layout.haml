!!! 5
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %link{:rel => "stylesheet", :href => url("styles.css"), :type => "text/css"}
    %title
      Awesome Trading App
  %body
    %div#outer
      %div#inner
        %div#status_container
          -if not @user.nil?
            %div#nav_menu
              %ul
                %li
                  %a{:href => url("/")} Store
                %li
                  %a{:href => url("/users")} Users
                %li
                  %a{:href => url("/items")} Items
                %li
                  %a{:href => url("/user/#{@user.name}")} My Profile
                %li
                  %a{:href => url("/activities")} Activities
            %div#credit_status
              %span
                Credits: $#{@user.credits}
            %div#login_status
              %span
                Logged in as
                %a{:href => url("/user/#{@user.name}")}
                  #{@user.name}
                |
                %a{:href => url("/logout")} Logout
          -else
            %div#login_status
              %span
                Not logged in!
                |
                %a{:href => url("/register")}
                  Register
        %div#content
          =yield
          %p#error_message
